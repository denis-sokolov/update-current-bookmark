{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "version": "1.0.1",

    "default_locale": "en",
    "description": "__MSG_extension_description__",
    "icons": {
        "16": "src/images/chain-star.png",
        "48": "src/images/chain-star.png",
        "128": "src/images/chain-star.png"
    },

    "background": {
        "service_worker": "src/context-menu.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "declarativeContent"
    ],
    "optional_permissions": [
        "bookmarks"
    ]
}
