{
    "manifest_version": 2,
    "name": "__MSG_extension_name__",
    "version": "1.0.0",

    "default_locale": "en",
    "description": "__MSG_extension_description__",
    "icons": {
        "16": "src/images/chain-star.png",
        "48": "src/images/chain-star.png",
        "128": "src/images/chain-star.png"
    },

    "background": {
        "scripts": [
            "src/context-menu.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "declarativeContent"
    ],
    "optional_permissions": [
        "bookmarks"
    ]
}
